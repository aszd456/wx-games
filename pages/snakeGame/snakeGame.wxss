.container {
	height: 100vh;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-around;
}

canvas {
	border: 1rpx solid #E64340;
	width: 20rem;
	height: 20rem;
}

.btnBox {
	display: flex;
	flex-direction: column;
	align-items: center;
}

.btnBox view {
	display: flex;
	flex-direction: row;
}

.btnBox button {
	width: 90rpx;
	height: 90rpx;
}

button {
	margin: 10rpx;
	background-color: #E64340;
	color: white;
}
