.container {
	height: 100vh;
	color: #E64340;
	font-weight: bold;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-evenly;
}

.title {
	font-size: 18pt;
}

canvas {
	border: 1rpx solid;
	width: 320px;
	height: 320px;
}

.btnBox {
	display: flex;
	flex-direction: column;
	align-items: center;
}

.btnBox view {
	display: flex;
	flex-direction: row;
}

.btnBox button {
	width: 90rpx;
	height: 90rpx;
}

button {
	margin: 10rpx;
}
